{% extends 'base.html.twig' %}
{% block title %}Content page{% endblock %}
{% block body %}
<div class="container">
    <h2>Content info</h2>
    {% if content %}
        <h3>Title: {{ content.title }} </h3>
        <h4>Slug: {{ content.slug }}</h4>
        <p>Content: {{ include(template_from_string(content.content)) }}</p>
    {% else %}
        No product found.
    {% endif %}
</div>
{% endblock %}
