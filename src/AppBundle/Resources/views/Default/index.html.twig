    {% if product4 is not empty %}
        <h3>Content found by id=1:</h3>
        Slug: {{ product4.slug }}, Title: {{ product4.title }}
    {% endif %}
    <hr/>

    <h3>Content Snippet by slug 'learn' example:</h3>
    {{ snippet('learn', 'AppBundle:Snippet:content.html.twig') }}

</div>
{% endblock %}
