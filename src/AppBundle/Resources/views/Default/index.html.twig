    {% if product1 is not empty %}
    <h3>Product found by id=1:</h3>
    {{ product1.flower }} {{ product1.place }} {{ product1.stock }}
    {% endif %}
    <hr/>

    {% if product2 is not empty %}
    <h3>Products found with stock=5:</h3>
    <ul class="list-group" style="list-style:none;">
    {% for choice in product2 %}
        <li class="list-group-item"> {{ choice.flower }} {{ choice.place }} {{ choice.stock }}</li>
    {% endfor %}
    </ul>
    {% endif %}
    <hr/>

    {% if product3 is not empty %}
        <h3>Products found with stock=1, sorted by name Asc, limited to 3 :</h3>
        <ul class="list-group" style="list-style:none;">
            {% for choice in product3 %}
                <li class="list-group-item"> {{ choice.flower }} {{ choice.place }} {{ choice.stock }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <hr/>

    {# TO DO: #}
    {#{{ getCategoryTree('AppBundle:Default:index.html.twig', 2, '1') }}#}
